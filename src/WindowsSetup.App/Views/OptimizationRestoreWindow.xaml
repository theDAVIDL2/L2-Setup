<Window x:Class="WindowsSetup.App.Views.OptimizationRestoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Restore Previous Settings" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <StackPanel>
                <TextBlock Text="â™»ï¸ Restore Previous Optimization Settings" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Foreground="White"/>
                <TextBlock Text="Select a backup to restore your system to its previous state" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="White" Opacity="0.9"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel>
                
                <!-- Warning Card -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16" Background="#FFF3E0">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Performance Issues?" FontSize="16" FontWeight="Bold" Foreground="#E65100" Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#BF360C" Margin="0,0,0,8">
                            <Run Text="If you're experiencing:"/>
                            <LineBreak/>
                            <Run Text="â€¢ Slow internet pages"/>
                            <LineBreak/>
                            <Run Text="â€¢ Apps taking long to open"/>
                            <LineBreak/>
                            <Run Text="â€¢ Network connectivity issues"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run FontWeight="Bold" Text="This is likely caused by network optimizations or disabled services."/>
                            <LineBreak/>
                            <Run Text="Restoring your backup will fix these issues."/>
                        </TextBlock>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Backups List -->
                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="ðŸ“¦ Available Backups" FontSize="16" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                            <Button HorizontalAlignment="Right" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Content="ðŸ”„ Refresh List" Click="RefreshBackups_Click" Padding="12,6"/>
                        </Grid>
                        
                        <TextBlock Text="Select a backup to restore:" Margin="0,0,0,8" Opacity="0.7"/>
                        
                        <ListBox x:Name="BackupsList" Height="250" 
                                SelectionMode="Single"
                                SelectionChanged="BackupsList_SelectionChanged"
                                materialDesign:ListBoxAssist.IsToggle="False">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Grid.Column="0" Kind="Backup" 
                                                                VerticalAlignment="Center" Margin="0,0,12,0"
                                                                Width="32" Height="32" Foreground="#4CAF50"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Description}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding Timestamp}" FontSize="12" Opacity="0.7"/>
                                            <TextBlock Text="{Binding Details}" FontSize="11" Opacity="0.6" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding RegistryCount}" FontSize="11" Opacity="0.7" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding ServiceCount}" FontSize="11" Opacity="0.7" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <TextBlock x:Name="NoBackupsMessage" Text="âš ï¸ No backups found. Backups are created automatically before applying optimizations." 
                                  Visibility="Collapsed" Margin="0,12,0,0" Foreground="#FF9800" FontWeight="Bold"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Restore Button -->
                <Button x:Name="RestoreButton" Content="â™»ï¸ Restore Selected Backup" 
                       Click="RestoreBackup_Click"
                       IsEnabled="False"
                       Height="60" Margin="0,0,0,16"
                       Background="#4CAF50"
                       FontSize="16" FontWeight="Bold"
                       Style="{StaticResource MaterialDesignRaisedButton}"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Log Output -->
        <materialDesign:Card Grid.Row="2" Margin="16" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="ðŸ“‹ Restore Log" FontWeight="Bold" Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LogOutput" 
                              FontFamily="Consolas" 
                              FontSize="11"
                              TextWrapping="Wrap"
                              Background="#F5F5F5"
                              Padding="8"/>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

    </Grid>
</Window>

