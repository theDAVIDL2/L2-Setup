<Window x:Class="WindowsSetup.App.Views.OptimizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Windows Optimization Settings" 
        Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <StackPanel>
                <TextBlock Text="Windows Optimization Settings" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Foreground="White"/>
                <TextBlock Text="Select which optimizations to apply to your system" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="White" Opacity="0.8"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                
                <!-- Quick Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Content="Select All" Click="SelectAll_Click" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Deselect All" Click="DeselectAll_Click" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Recommended" Click="SelectRecommended_Click" Width="120"/>
                </StackPanel>

                <!-- Performance Optimizations -->
                <TextBlock Text="âš¡ Performance Optimizations" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <CheckBox x:Name="OptPower" Content="High Performance Power Plan" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptMouse" Content="Disable Mouse Acceleration" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptVisualEffects" Content="Optimize Visual Effects for Performance" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptExplorer" Content="Optimize File Explorer" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptStartup" Content="Disable Unnecessary Startup Programs" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptPageFile" Content="Optimize Virtual Memory (Page File)" Margin="20,5,0,5" IsChecked="False"/>

                <Separator Margin="0,15"/>

                <!-- Privacy & Telemetry -->
                <TextBlock Text="ðŸ”’ Privacy &amp; Telemetry" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                <CheckBox x:Name="OptTelemetry" Content="Disable Windows Telemetry" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptCortana" Content="Disable Cortana" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptAdvertising" Content="Disable Advertising ID" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptLocation" Content="Disable Location Tracking" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptDiagnostics" Content="Disable Diagnostic Data Collection" Margin="20,5,0,5" IsChecked="True"/>

                <Separator Margin="0,15"/>

                <!-- Services -->
                <TextBlock Text="âš™ï¸ Windows Services" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                <CheckBox x:Name="OptPrintSpooler" Content="Disable Print Spooler (if no printer)" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptFax" Content="Disable Fax Service" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptWindowsSearch" Content="Disable Windows Search Indexing" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptSuperfetch" Content="Disable Superfetch/SysMain (SSD only)" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptWindowsUpdate" Content="Set Windows Update to Manual" Margin="20,5,0,5" IsChecked="False"/>

                <Separator Margin="0,15"/>

                <!-- Gaming Optimizations -->
                <TextBlock Text="ðŸŽ® Gaming Optimizations" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                <CheckBox x:Name="OptGameMode" Content="Enable Game Mode" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptGameBar" Content="Disable Xbox Game Bar" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptGameDVR" Content="Disable Game DVR" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptFullscreenOpt" Content="Enable Hardware Accelerated GPU Scheduling" Margin="20,5,0,5" IsChecked="True"/>

                <Separator Margin="0,15"/>

                <!-- Cleanup -->
                <TextBlock Text="ðŸ§¹ System Cleanup" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                <CheckBox x:Name="OptTempFiles" Content="Clean Temporary Files" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptRecycleBin" Content="Empty Recycle Bin" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptWindowsOld" Content="Delete Windows.old Folder" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptDownloads" Content="Clean Downloads Folder" Margin="20,5,0,5" IsChecked="False"/>

                <Separator Margin="0,15"/>

                <!-- Advanced -->
                <TextBlock Text="âš ï¸ Advanced (Use with caution)" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                <CheckBox x:Name="OptCreateRestore" Content="Create System Restore Point Before Changes" Margin="20,5,0,5" IsChecked="True"/>
                <CheckBox x:Name="OptDisableOneDrive" Content="Disable OneDrive" Margin="20,5,0,5" IsChecked="False"/>
                <CheckBox x:Name="OptDisableHibernation" Content="Disable Hibernation (Frees Space)" Margin="20,5,0,5" IsChecked="False"/>
                
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="0,0,10,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="Apply Optimizations" Click="Apply_Click" Width="150" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>

    </Grid>
</Window>

