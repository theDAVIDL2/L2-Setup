<Window x:Class="WindowsSetup.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Windows Post-Format Setup Tool" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <StackPanel>
                <TextBlock Text="Windows Post-Format Setup Tool" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Foreground="White"/>
                <TextBlock Text="Automated Windows Setup &amp; Configuration" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="White" Opacity="0.8"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignTabControl}" Margin="10">
            
            <!-- Quick Setup Tab -->
            <TabItem Header="Quick Setup">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Quick Installation" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                  Margin="0,0,0,20"/>
                        
                        <Button Content="Install Essentials Only" 
                               Click="InstallEssentials_Click"
                               Background="#2196F3"/>
                        
                        <Button Content="Install All Tools" 
                               Click="InstallAll_Click"
                               Background="#4CAF50"/>
                        
                    <Button Content="Install GPU Drivers" 
                           Click="InstallGPUDrivers_Click"
                           Background="#FF9800"/>
                    
                    <Button Content="Install All Runtimes (All-in-One)" 
                           Click="InstallRuntimes_Click"
                           Background="#9C27B0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Custom Selection Tab -->
            <TabItem Header="Custom Selection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Select All" Click="SelectAll_Click" Width="100"/>
                        <Button Content="Deselect All" Click="DeselectAll_Click" Width="100"/>
                        <Button Content="Select Essentials" Click="SelectEssentials_Click" Width="120"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="CustomToolsList" Margin="20"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Install Selected Tools" 
                           Click="InstallSelected_Click"
                           Height="60" Margin="20"
                           Background="#673AB7"
                           FontSize="16" FontWeight="Bold"/>
                </Grid>
            </TabItem>

            <!-- Browser Management Tab -->
            <TabItem Header="Browser">
                <StackPanel Margin="20">
                    <TextBlock Text="Brave Browser Management" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <Button Content="Backup Brave Profile" 
                           Click="BackupBrave_Click"/>
                    
                    <Button Content="Restore Brave Profile" 
                           Click="RestoreBrave_Click"/>
                    
                    <Button Content="Set Brave as Default Browser" 
                           Click="SetBraveDefault_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Windows Tab -->
            <TabItem Header="Windows">
                <StackPanel Margin="20">
                    <TextBlock Text="Windows Configuration" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <Button Content="Apply Windows Optimizations" 
                           Click="OptimizeWindows_Click"
                           Background="#9C27B0"/>
                    
                    <Button Content="Activate Windows" 
                           Click="ActivateWindows_Click"
                           Background="#F44336"/>
                </StackPanel>
            </TabItem>

        </TabControl>

        <!-- Log Section -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E0E0E0" Margin="10,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Activity Log" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="10,5"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</Window>
