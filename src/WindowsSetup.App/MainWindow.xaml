<Window x:Class="WindowsSetup.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="L2 Setup" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <StackPanel>
                <TextBlock Text="L2 Setup" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Foreground="White"/>
                <TextBlock Text="All-in-One Windows Post-Format Automation" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="White" Opacity="0.8"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignTabControl}" Margin="10">
            
            <!-- Quick Setup Tab -->
            <TabItem Header="Quick Setup">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Quick Installation" 
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                  Margin="0,0,0,20"/>
                        
                        <Button Content="Install Essentials Only" 
                               Click="InstallEssentials_Click"
                               Background="#2196F3"/>
                        
                        <Button Content="Install All Tools" 
                               Click="InstallAll_Click"
                               Background="#4CAF50"/>
                        
                    <Button Content="Install GPU Drivers" 
                           Click="InstallGPUDrivers_Click"
                           Background="#FF9800"/>
                    
                    <Button Content="Install All Runtimes (All-in-One)" 
                           Click="InstallRuntimes_Click"
                           Background="#9C27B0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Custom Selection Tab -->
            <TabItem Header="Custom Selection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="Select All" Click="SelectAll_Click" Width="100"/>
                        <Button Content="Deselect All" Click="DeselectAll_Click" Width="100"/>
                        <Button Content="Select Essentials" Click="SelectEssentials_Click" Width="120"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="CustomToolsList" Margin="20"/>
                    </ScrollViewer>

                    <Button Grid.Row="2" Content="Install Selected Tools" 
                           Click="InstallSelected_Click"
                           Height="60" Margin="20"
                           Background="#673AB7"
                           FontSize="16" FontWeight="Bold"/>
                </Grid>
            </TabItem>

            <!-- Browser Management Tab -->
            <TabItem Header="Browser">
                <StackPanel Margin="20">
                    <TextBlock Text="Brave Browser Management" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <Button Content="Backup Brave Profile" 
                           Click="BackupBrave_Click"/>
                    
                    <Button Content="Restore Brave Profile" 
                           Click="RestoreBrave_Click"/>
                    
                    <Button Content="Set Brave as Default Browser" 
                           Click="SetBraveDefault_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Windows Tab -->
            <TabItem Header="Windows">
                <StackPanel Margin="20">
                    <TextBlock Text="Windows Configuration" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <Button Content="Apply Windows Optimizations" 
                           Click="OptimizeWindows_Click"
                           Background="#9C27B0"/>
                    
                    <Button Content="‚ôªÔ∏è Restore from Backup" 
                           Click="RestoreOptimizations_Click"
                           Background="#FF9800"
                           ToolTip="Restore from a backup created before optimizations"/>
                    
                    <Button Content="üîÑ Reset to Safe Defaults (No Backup Needed)" 
                           Click="ResetToSafeDefaults_Click"
                           Background="#4CAF50"
                           ToolTip="Undo risky optimizations and restore Windows defaults (works without backup!)"/>
                    
                    <Button Content="Activate Windows" 
                           Click="ActivateWindows_Click"
                           Background="#F44336"/>
                </StackPanel>
            </TabItem>

            <!-- Cursor Tools Tab -->
            <TabItem Header="Cursor Tools">
                <StackPanel Margin="20">
                    <TextBlock Text="üéØ Cursor IDE Management &amp; Spoofer" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Professional Machine ID Spoofer - Changes Windows registry IDs, spoofs system GUIDs, manages Cursor configuration, backup/restore, and more!" 
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"
                              Opacity="0.7"/>
                    
                    <Button Content="üéØ Open Machine ID Spoofer &amp; Cursor Tools" 
                           Click="OpenCursorTools_Click"
                           Background="#00BCD4"
                           Height="60"
                           FontSize="16"
                           FontWeight="Bold"/>
                    
                    <TextBlock Text="Available Tools:" 
                              FontWeight="Bold"
                              Margin="0,20,0,8"/>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8" LineHeight="22">
                        ‚Ä¢ üîÑ Change Machine ID - Regenerate device identifiers<LineBreak/>
                        ‚Ä¢ üíæ Backup &amp; Restore - Save and restore your configuration<LineBreak/>
                        ‚Ä¢ üóëÔ∏è Clear Cache - Remove temporary files and cache<LineBreak/>
                        ‚Ä¢ üëÅÔ∏è View Machine IDs - Display current device identifiers<LineBreak/>
                        ‚Ä¢ üìÅ Config Manager - Quick access to configuration folder<LineBreak/>
                        ‚Ä¢ ‚öôÔ∏è Advanced Tools - Disable updates, total reset, and more
                    </TextBlock>
                </StackPanel>
            </TabItem>

            <!-- System ID Spoofer Tab -->
            <TabItem Header="System ID Spoofer">
                <StackPanel Margin="20">
                    <TextBlock Text="üé≠ System Identity Spoofer" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                              Margin="0,0,0,20"/>
                    
                    <TextBlock Text="ADVANCED: Comprehensive system-wide identity spoofing tool for security testing. Spoof machine GUIDs, MAC addresses, volume serials, and mask your IP with Tor/VPN integration." 
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"
                              Opacity="0.7"/>
                    
                    <Button Content="üöÄ Open System ID Spoofer" 
                           Click="OpenSystemIdSpoofer_Click"
                           Background="#FF5722"
                           Height="60"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"/>
                    
                    <!-- Warning panel -->
                    <materialDesign:Card Background="#FFF3E0" Margin="0,20,0,0">
                        <StackPanel Margin="16">
                            <TextBlock Text="‚ö†Ô∏è WARNING: Advanced Tool" FontWeight="Bold" Foreground="#E65100"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,8,0,0" Foreground="#E65100">
                                This tool modifies system-level identifiers and network settings. Improper use may cause:
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="16,8,0,0" Foreground="#E65100">
                                ‚Ä¢ Windows activation issues<LineBreak/>
                                ‚Ä¢ Software licensing problems<LineBreak/>
                                ‚Ä¢ Network connectivity issues<LineBreak/>
                                ‚Ä¢ System instability
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,8,0,0" FontWeight="Bold" Foreground="#E65100">
                                ‚úì Use for security testing only<LineBreak/>
                                ‚úì Always create backups first<LineBreak/>
                                ‚úì Test on virtual machine if possible<LineBreak/>
                                ‚úì Requires Administrator privileges
                            </TextBlock>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <TextBlock Text="Features:" 
                              FontWeight="Bold"
                              Margin="0,20,0,8"/>
                    <TextBlock TextWrapping="Wrap" Opacity="0.8" LineHeight="22">
                        ‚Ä¢ üîß Machine GUID Spoofing - Change Windows system identifiers<LineBreak/>
                        ‚Ä¢ üåê MAC Address Spoofing - Real-time network adapter changes<LineBreak/>
                        ‚Ä¢ üíΩ Volume Serial Spoofing - Change disk serial numbers<LineBreak/>
                        ‚Ä¢ üßÖ Tor Integration - Anonymous browsing<LineBreak/>
                        ‚Ä¢ üîê OpenVPN Support - VPN connection management<LineBreak/>
                        ‚Ä¢ üíæ Backup &amp; Restore - Full system ID backup<LineBreak/>
                        ‚Ä¢ ‚Ü©Ô∏è Toggleable Changes - Easy restore to original
                    </TextBlock>
                </StackPanel>
            </TabItem>

        </TabControl>

        <!-- Log Section -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E0E0E0" Margin="10,0,10,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Activity Log" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="10,5"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" 
                            IsReadOnly="True"
                            TextWrapping="Wrap"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="10"/>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</Window>
