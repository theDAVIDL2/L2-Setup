<Window x:Class="WindowsSetup.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Windows Post-Format Setup Tool" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cog" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="Windows Post-Format Setup Tool" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <TextBlock x:Name="AdminStatusText" 
                               Text="Admin Mode" 
                               VerticalAlignment="Center" 
                               Margin="0,0,16,0"
                               FontWeight="Bold"/>
                    <materialDesign:PackIcon Kind="ShieldCheck" Width="24" Height="24" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Cards -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Browser Management Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="Web" Width="32" Height="32" Margin="0,0,16,0"/>
                                <TextBlock Text="Browser Management" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                                <materialDesign:Chip Content="PRIORITY" Margin="16,0,0,0" Background="Orange"/>
                            </StackPanel>
                            <TextBlock Text="Backup and restore your Brave browser profile before/after formatting" 
                                       TextWrapping="Wrap" 
                                       Opacity="0.7" 
                                       Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="BackupBraveButton" 
                                        Content="Backup Brave Profile" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,0,8,0"
                                        Click="BackupBraveButton_Click"/>
                                <Button x:Name="RestoreBraveButton" 
                                        Content="Restore Brave Profile" 
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        Margin="0,0,8,0"
                                        Click="RestoreBraveButton_Click"/>
                                <Button x:Name="SetBraveDefaultButton" 
                                        Content="Set as Default" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="SetBraveDefaultButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Install Tools Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="Download" Width="32" Height="32" Margin="0,0,16,0"/>
                                <TextBlock Text="Install Tools" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Install development tools, applications, and runtimes automatically" 
                                       TextWrapping="Wrap" 
                                       Opacity="0.7" 
                                       Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="InstallEssentialsButton" 
                                        Content="Install Essentials" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,0,8,0"
                                        Click="InstallEssentialsButton_Click"/>
                                <Button x:Name="InstallAllButton" 
                                        Content="Install All Tools" 
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                        Margin="0,0,8,0"
                                        Click="InstallAllButton_Click"/>
                                <Button x:Name="CustomInstallButton" 
                                        Content="Custom Selection" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="CustomInstallButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- System Optimization Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="SpeedoMeter" Width="32" Height="32" Margin="0,0,16,0"/>
                                <TextBlock Text="System Optimization" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Apply Windows optimizations for better performance and privacy" 
                                       TextWrapping="Wrap" 
                                       Opacity="0.7" 
                                       Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="OptimizeButton" 
                                        Content="Apply Optimizations" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,0,8,0"
                                        Click="OptimizeButton_Click"/>
                                <Button x:Name="AdvancedOptimizeButton" 
                                        Content="Advanced (CTT)" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="AdvancedOptimizeButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Windows Activation Card -->
                    <materialDesign:Card Margin="0,0,0,16" Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <materialDesign:PackIcon Kind="Key" Width="32" Height="32" Margin="0,0,16,0"/>
                                <TextBlock Text="Windows Activation" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Activate Windows automatically using Microsoft Activation Scripts" 
                                       TextWrapping="Wrap" 
                                       Opacity="0.7" 
                                       Margin="0,0,0,16"/>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="ActivateWindowsButton" 
                                        Content="Activate Windows" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,0,8,0"
                                        Click="ActivateWindowsButton_Click"/>
                                <Button x:Name="CheckActivationButton" 
                                        Content="Check Status" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="CheckActivationButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Progress Bar -->
                    <materialDesign:Card Padding="16">
                        <StackPanel>
                            <TextBlock x:Name="ProgressText" Text="Ready" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ProgressBar x:Name="ProgressBar" Height="8" Value="0" Maximum="100"/>
                            <TextBlock x:Name="StatusText" Text="Waiting for action..." Margin="0,8,0,0" Opacity="0.7"/>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Right Panel - Log -->
            <materialDesign:Card Grid.Column="2" Padding="16">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Console" Width="24" Height="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Activity Log" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button x:Name="ClearLogButton" 
                                Content="Clear" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Right"
                                Click="ClearLogButton_Click"
                                Margin="8,0,0,0"/>
                        <Button x:Name="ExportLogButton" 
                                Content="Export" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Click="ExportLogButton_Click"
                                Margin="8,0,0,0"/>
                    </StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogTextBox" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap" 
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </DockPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Footer -->
        <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="16">
            <DockPanel>
                <TextBlock Text="v1.0.0 | MIT License" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <TextBlock Text="Made with ❤️ for Windows enthusiasts" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <materialDesign:PackIcon Kind="Github" Width="20" Height="20" VerticalAlignment="Center" Cursor="Hand"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>

